{
  "name": "@mishabalin/mbtools",
  "version": "1.0.1",
  "description": "A CLI to bootstrap my dev tools",
  "types": "lib/types",
  "main": "lib/index.js",
  "bin": {
    "mbtools": "bin/mbtools"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json,md}",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "clean": "rimraf ./lib",
    "copy": "cp -r src/templates lib/templates",
    "compile:ts": "tsc --project .",
    "compile:exec": "pkg ./lib/index.js --config package.json --targets linux --output lib/exec/mbtools",
    "build": "yarn run clean && yarn run compile:ts && yarn copy && yarn run compile:exec",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "cli",
    "mbtools"
  ],
  "author": "Misha Balin",
  "license": "MIT",
  "dependencies": {
    "@types/configstore": "^4.0.0",
    "chalk": "^4.1.0",
    "configstore": "^5.0.1",
    "dotenv": "^8.2.0",
    "dropbox": "^7.3.0",
    "ejs": "^3.1.5",
    "execa": "^4.1.0",
    "fs-jetpack": "^4.0.1",
    "inquirer": "^7.3.3",
    "listr": "^0.14.3",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "pkg-install": "^1.0.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/ejs": "^3.0.5",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.15",
    "@types/listr": "^0.14.2",
    "@types/lodash": "^4.14.164",
    "@types/ncp": "^2.0.4",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.7",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.6.1",
    "lint-staged": "^10.5.0",
    "pkg": "^4.4.9",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "files": [
    "bin/",
    "lib/",
    "tsconfig.json"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "pkg": {
    "assets": "lib/templates/**/*"
  }
}
