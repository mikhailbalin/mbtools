{
  "name": "@mishabalin/mbtools",
  "version": "0.0.1",
  "description": "A CLI to bootstrap my dev tools",
  "types": "lib/types",
  "main": "lib/index.js",
  "bin": {
    "mbtools": "bin/mbtools"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write **/*.{js,ts,tsx,json,md}",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "clean": "rimraf ./lib mbtools",
    "compile:ts": "tsc --project .",
    "compile:exec": "pkg ./lib/index.js --targets linux --output lib/exec/mbtools",
    "build": "npm run clean && npm run compile:ts && npm run compile:exec",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "cli",
    "mbtools"
  ],
  "author": "Misha Balin",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.4.0",
    "@typescript-eslint/parser": "^3.4.0",
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "pkg": "^4.4.9",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "files": [
    "bin/",
    "lib/",
    "templates/",
    "tsconfig.json"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "pkg": {
    "assets": [
      "./node_modules/@types",
      "./node_modules/typescript/lib/*.d.ts",
      "src/**/*.ts",
      "./tsconfig.json"
    ]
  }
}
